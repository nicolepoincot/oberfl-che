<Window x:Class="oberfläche.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oberfläche"
        mc:Ignorable="d"
        Title="Fenster" Height="450" Width="800">
    <Grid>
        <Menu IsMainMenu="true">
            <MenuItem  Header="Datei">
                <MenuItem Header="Neu" Click="Neu_Click"/>
                <Separator/>



                <MenuItem Header="Beenden" Click="Beenden_Click" />



            </MenuItem>
            <MenuItem Header="Bearbeiten">
                <MenuItem Header="Ausschneiden" Command="Cut"/>


                <MenuItem Header="Kopieren" Command="Copy"/>


                <MenuItem Header="Einfügen" Command="Paste"/>


            </MenuItem>
            
        </Menu>
        <Grid Margin=" 400,25,0,0">

            <TextBlock FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center">
            Hallo Welt!

            </TextBlock>
        </Grid>
        <Grid Margin="0, 25,400,0" Background="#FF44A7C7" MouseDown="Grid_MouseDown">
        </Grid>
    </Grid>
</Window>
